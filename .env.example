# ===========================
# üå± Environment Configuration
# ===========================
NODE_ENV="development"          # Options: 'development' or 'production'
PORT="8080"                     # The port your server will listen on
HOST="localhost"                # Server hostname

# ===========================
# üåê CORS Settings
# ===========================
CORS_ORIGIN="http://localhost:3000" 
CORS_ORIGIN_PUBLIC="https://your-website.online"
CLIENT_SHORT_LINK="http://localhost:3000" 

# ===========================
# üö¶ Rate Limiting
# ===========================
COMMON_RATE_LIMIT_WINDOW_MS="1000"       # Time window for rate limiting (in milliseconds)
COMMON_RATE_LIMIT_MAX_REQUESTS="100"     # Max requests allowed per IP per window

# ===========================
# üóÑÔ∏è Database Configuration (MongoDB)
# ===========================
DB_CONNECTION_STRING="mongodb://localhost:27017/"
DB_NAME="Shorten_URL"
DB_USER_COLLECTION="users"
DB_REFRESH_TOKEN_COLLECTION="refresh_tokens"
DB_URL_COLLECTION="urls"
DB_QR_HISTORY_COLLECTION="qr_histories"

# ===========================
# üîê JWT & Security Keys
# ===========================
PRIVATE_ACCESS_TOKEN_KEY="your_access_token_private_key_here"
PRIVATE_REFRESH_TOKEN_KEY="your_refresh_token_private_key_here"
ALGORITHM_JWT="HS256"
ACCESS_TOKEN_EXPIRATION_TIME="1h"        # Access token expiration
REFRESH_TOKEN_EXPIRATION_TIME="3d"       # Refresh token expiration
SECRET_OR_PUBLIC_JWT_KEY="your_jwt_secret_key_here"
PRIVATE_PASSWORD="your_strong_private_password_here"

# ===========================
# üìß Email Configuration (SMTP)
# ===========================
EMAIL_PORT="587"                         
CLIENT_URL="http://localhost:3000"       
EMAIL_USER="your_email@example.com"      # SMTP email address
EMAIL_PASSWORD="your_email_password"     # App password (not your regular Gmail password)

# ===========================
# ‚òÅÔ∏è AWS Configuration (S3)
# ===========================
AWS_REGION="ap-southeast-1"
AWS_BUCKET_NAME="your-bucket-name"
AWS_ACCESS_KEY_ID="your_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"

# ===========================
# üîë Google OAuth2
# ===========================
GOOGLE_CLIENT_ID="your_google_client_id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
GOOGLE_REDIRECT_URI="http://localhost:3000"

# ===========================
# ü§ñ Google reCAPTCHA
# ===========================
SECRECT_KEY_RECAPCHA="your_google_recaptcha_secret_key"
